<div class="p-4 border-b border-gray-700 hover:bg-gray-750 transition-colors duration-200">
    <div class="flex items-center justify-between">
        <div class="flex-1">
            <div class="flex items-center">
                <span class="<%= result === 'win' ? 'text-green-500' : 'text-red-500' %> font-bold mr-2 flex items-center">
                    <% if (result === 'win') { %>
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                    <% } else { %>
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                        </svg>
                    <% } %>
                    <%= result.toUpperCase() %>
                </span>
                <span class="text-gray-400 px-2 py-1 rounded bg-gray-700 text-sm"><%= map %></span>
            </div>
            <div class="text-sm mt-2">
                <span class="text-gray-300">K/D:</span>
                <span class="font-mono"><%= kills %>/<%= deaths %></span>
                <span class="mx-2">â€¢</span>
                <span class="text-gray-300">Weapon:</span>
                <span class="font-mono"><%= weapon %></span>
            </div>
        </div>
        <div class="text-right text-sm text-gray-400">
            <div><%= formatDate(date) %></div>
            <div><%= formatTime(date) %></div>
        </div>
    </div>
</div>